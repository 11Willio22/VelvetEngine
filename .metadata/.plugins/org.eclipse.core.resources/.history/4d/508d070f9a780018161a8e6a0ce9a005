package graphics;

import org.lwjgl.glfw.GLFWVidMode;

public class Window
{
	public static final int FULLSCREEN 		= 0x01;
	public static final int WINDOWED 		= 0x02;
	public static final int BORDERLESS 		= 0x04;
	public static final int NONRESIZEABLE 	= 0x08;
	public static final int VSYNC			= 0x10;	
	
	private String 	title;
	private int 	x, y;
	private int 	width, height;
	private int 	flags;
	
	private Window() {}
	
	public static Window createWindow(String title, int width, int height, int x, int y, int flags)
	{
		Window window = new Window();
		window.title 	= title;
		window.width 	= width;
		window.height 	= height;
		window.flags	= flags;
		
		if((flags & FULLSCREEN) == FULLSCREEN)
		{
			
		}
		
		return window;
	}
	
	public static Window createWindow(String title, String width, String height, int flags)
	{
		GLFWVidMode mode = glfwGetVideoMode(glfwGetPrimaryMonitor());

	    window_width = mode->width;
	    window_height = mode->height;
	}
}
